alias -g zspec="zeus rspec"
alias -g v="vim"
alias -g vv="vim -o"
alias -g bb="brew update && brew upgrade"
alias -g bd="brew doctor"
alias -g deadhorse="open http://i.imgur.com/IwK5sDa.gif"
alias -g ggprune="g remote prune origin"
